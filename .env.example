# ======================
# CONFIGURAÇÕES DO BANCO
# ======================
# Nome do banco de dados
DB_NAME=finance_db

# Usuário do banco
DB_USER=finance_user

# Senha do banco
# ⚠️ NÃO use senha real aqui
DB_PASS=your_database_password

# Host do banco (localhost ou IP do servidor)
DB_HOST=localhost

# Porta padrão do PostgreSQL
DB_PORT=5432

# Dialeto do Sequelize
DB_DIALECT=postgres

# Log das queries do Sequelize
# true = mostra SQL no terminal
# false = silencioso
DB_LOGGING=false

# ======================
# AMBIENTE DA APLICAÇÃO
# ======================
# development | test | production
NODE_ENV=development

# Porta onde a API irá rodar
PORT=3000

# ======================
# SEGURANÇA
# ======================
# Chave secreta para JWT
# ⚠️ ALTERE EM PRODUÇÃO
JWT_SECRET=change_this_secret_key
